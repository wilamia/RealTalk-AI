<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RealTalk_AI.ChatPage"
             BackgroundColor="#EFEFEF">

    <StackLayout Padding="0">

        <!-- Header Section (Menu and Title) -->
        <StackLayout>
            <Frame
                BackgroundColor="#EFEFEF"
                Margin="0"
                Padding="0"
                CornerRadius="0"
                HasShadow="False"
                BorderColor="#20000000">

                <StackLayout>
                    <Grid BackgroundColor="Transparent" Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Menu Icon -->
                        <ImageButton
                            Source="menu_icon.svg"
                            WidthRequest="45"
                            HeightRequest="45"
                            SemanticProperties.Hint="Menu"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Start" />

                        <!-- Title -->
                        <Label
                            Text="SmartTalk AI"
                            FontSize="20"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            FontFamily="Nunito-Bold"
                            Margin="-30,0,0,0"
                            Grid.Column="1"
                            TextColor="#305FD5"
                            HorizontalOptions="Center" />
                    </Grid>
                </StackLayout>

            </Frame>
        </StackLayout>

        <!-- Chat Section -->
        <ScrollView x:Name="ChatScrollView" VerticalOptions="FillAndExpand">
            <StackLayout x:Name="ChatLayout" Spacing="5">
                <!-- Messages will be added here -->
            </StackLayout>
        </ScrollView>

        <!-- Message Input Section -->

        <Frame
                    BackgroundColor="White"
                    CornerRadius="15"
                    BorderColor="Transparent"
                    Padding="10"
                    HorizontalOptions="FillAndExpand" 
                    VerticalOptions="End"
                    HasShadow="True"
                    Margin="20,10,20,30" >
            <Frame.Shadow>
                <Shadow Brush="Black" Offset="0,10" Opacity="0.5" Radius="10" />
            </Frame.Shadow>

            <HorizontalStackLayout
                        Spacing="10"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="End">

                <Entry
                            x:Name="InputEntry"
                            Placeholder="Введите ваш вопрос..."
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="#FFFFFF"
                              FontFamily="Nunito-Medium"
                            TextColor="Black"
                            WidthRequest="275"
                            Margin="0,0,10,0"/>

                <ImageButton
                    x:Name="SendButton"
                            Source="send_icon.svg"
                            WidthRequest="25"
                            HeightRequest="25"
                            SemanticProperties.Hint="Нажмите, чтобы отправить"
                            BackgroundColor="Transparent"
                            Clicked="OnSendMessage"/>
            </HorizontalStackLayout>
        </Frame>

    </StackLayout>
</ContentPage>