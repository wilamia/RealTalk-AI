<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RealTalk_AI.ChatPage"
             BackgroundColor="#EFEFEF">

    <StackLayout Padding="0">

        <!-- Header Section (Menu and Title) -->
        <ScrollView x:Name="ChatScrollView" VerticalOptions="FillAndExpand">
            <StackLayout x:Name="ChatLayout" Spacing="5">

            </StackLayout>
        </ScrollView>


        <Frame
                    BackgroundColor="White"
                    CornerRadius="15"
                    BorderColor="Transparent"
                    Padding="10"
                    HorizontalOptions="FillAndExpand" 
                    VerticalOptions="End"
                    HasShadow="True"
                    Margin="20,10,20,30" >
            <Frame.Shadow>
                <Shadow Brush="Black" Opacity="0.3" Radius="5" />
            </Frame.Shadow>

            <HorizontalStackLayout
                        Spacing="10"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="End">

                <Entry
                            x:Name="InputEntry"
                            Placeholder="Введите ваш вопрос..."
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="#FFFFFF"
                              FontFamily="Nunito-Medium"
                            TextColor="Black"
                            WidthRequest="275"
                            Margin="0,0,10,0"/>

                <ImageButton
                    x:Name="SendButton"
                    Source="send_icon.svg"
                    WidthRequest="25"
                    HeightRequest="25"
                    SemanticProperties.Hint="Нажмите, чтобы отправить"
                    BackgroundColor="Transparent"
                    Clicked="OnSendOrStopMessage"/>
            </HorizontalStackLayout>
        </Frame>

    </StackLayout>
</ContentPage>