<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RealTalk_AI"
             x:Class="RealTalk_AI.SignInPage"
              BackgroundColor="#F7F7F7">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center"  HorizontalOptions="{OnPlatform 
                                         Android=Fill, 
                                         iOS=Fill, 
                                         WinUI=Center, 
                                         MacCatalyst=Fill,
                                         Tizen=Fill, 
                                         Default=Fill}">

            <Label Text="Войти в аккаунт"
               FontSize="35"
               FontFamily="Nunito-Bold.ttf"
               HorizontalOptions="Center"
               TextColor="#305FD5" 
               Margin="0,0,0,80"/>

            <VerticalStackLayout Spacing="4" Margin="36,0,36,20">
                <Label Text="Почта"
                   FontFamily="Nunito-Medium.ttf"
                   FontSize="18"
                   TextColor="#701E1E1E"
                       Margin="10,0,0,0"/>
                <Frame CornerRadius="15" Padding="0" BackgroundColor="#40305FD5" BorderColor="Transparent"
       WidthRequest="300" Margin="20,0,20,0">
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <Image Source="email.png" 
               Grid.Column="0" 
               HeightRequest="25" 
               WidthRequest="25"
               VerticalOptions="Center"
               Margin="15,0,0,0"/>
                        <Entry Placeholder="Введите почту"
               x:Name="emailEntry"
               FontFamily="Nunito-Medium.ttf" 
               Grid.Column="1"
               PlaceholderColor="#F5F7FC" 
               TextColor="Black"
               HeightRequest="60"
               HorizontalOptions="FillAndExpand" 
               VerticalOptions="Center"
               WidthRequest="250"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="4" Margin="36,0,36,20" >
                <Label Text="Пароль"
                   FontFamily="Nunito-Medium.ttf"
                   FontSize="18"
                   TextColor="#701E1E1E"
                   Margin="10,0,0,0"/>

                <Frame CornerRadius="15" Padding="0" BackgroundColor="#40305FD5" BorderColor="Transparent"  WidthRequest="300" Margin="20,0,20,0">
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <Image Source="formkit_password.png" 
                   Grid.Column="0" 
                   HeightRequest="25" 
                   HorizontalOptions="Start" 
                   WidthRequest="25"
                   VerticalOptions="Center"
                   Margin="15,0,0,0"/>

                        <Entry Placeholder="Введите пароль"
                   x:Name="passwordEntry"
                   FontFamily="Nunito-Medium.ttf"
                   IsPassword="True"
                   Grid.Column="1"
                   PlaceholderColor="#F5F7FC" 
                   HeightRequest="60"
                   TextColor="Black"
                   HorizontalOptions="FillAndExpand" 
                   VerticalOptions="Center"/>

                        <Image Source="eye_close.png" 
                   Grid.Column="2" 
                   HeightRequest="25"
                   WidthRequest="27"
                   VerticalOptions="Center"
                   HorizontalOptions="End" 
                   Margin="0,0,10,0">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEyeTapped" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

            <Label Text="Забыли пароль?"
               HorizontalOptions="Center"
                   FontFamily="Nunito-Medium.ttf"
               TextColor="#1E1E1E">
                <Label.GestureRecognizers>
                  <!--  <TapGestureRecognizer Tapped="OnForgotPasswordTapped" /> -->
                </Label.GestureRecognizers>
            </Label>

            <Button Text="Войти"
                FontFamily="Nunito-Bold.ttf"
                HeightRequest="60"
                BackgroundColor="#007AFF"
                TextColor="White"
                CornerRadius="15"
                Margin="36,50,36,20" 
                    Clicked="OnSignInClicked"/>
            <Label Text="Нет аккаунта?"
               HorizontalOptions="Center" 
                   FontFamily="Nunito-Medium.ttf"
                   Margin="0,20,0,0"
                   TextColor="#1E1E1E"/>
            <Button Text="Создать аккаунт"
                BackgroundColor="Transparent"
                TextColor="#1E1E1E"
                FontFamily="Nunito-ExtraBold.ttf"
                HorizontalOptions="Center" 
         Clicked="OnSignUpClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
