<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RealTalk_AI"
             xmlns:resx="clr-namespace:RealTalk_AI.Resources"
             x:Class="RealTalk_AI.App"
             xmlns:converters="clr-namespace:RealTalk_AI.Utils">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <converters:StringNullOrEmptyToBoolConverter x:Key="StringNullOrEmptyToBoolConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <resx:LocalizationResourceManager x:Key="LocalizationManager"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
